{
  "name": "autoscripts",
  "displayName": "Autoscripts",
  "description": "Automatically run scripts to configure VS Code.",
  "version": "0.0.1",
  "license": "ISC",
  "publisher": "gregoire",
  "author": {
    "name": "Gr√©goire Geis",
    "email": "opensource@gregoirege.is"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/71/autoscripts.git"
  },
  "readme": "README.md",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.44.0"
  },
  "scripts": {
    "check": "eslint .",
    "format": "eslint . --fix",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/vscode": "^1.44.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "glob": "^7.1.6",
    "typescript": "^4.2.3",
    "vsce": "^1.87.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Autoscripts",
      "properties": {
        "autoscripts.scripts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "${command:autoscripts.getUserDirectory}/**/*.js"
          ],
          "description": "Controls which scripts are automatically run to configure VS Code."
        }
      }
    },
    "commands": [
      {
        "title": "Return the user directory.",
        "command": "autoscripts.getUserDirectory",
        "enablement": "0 == 1"
      }
    ]
  }
}
